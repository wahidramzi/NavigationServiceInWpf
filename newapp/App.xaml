<Application x:Class="newapp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:newapp"
             xmlns:viewModel="clr-namespace:newapp.MVVM.ViewModel"
             xmlns:view="clr-namespace:newapp.MVVM.View">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModel:StandardLessonViewModel}">
            <view:StandardLessonView></view:StandardLessonView>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:ListeningLessonViewModel}">
            <view:ListeningLessonView></view:ListeningLessonView>
        </DataTemplate>
        
        
    </Application.Resources>
</Application>
